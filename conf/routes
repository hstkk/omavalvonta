# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# dynamic form results
GET		/era/:batchId/:program								controllers.dynamicforms.Results.add(batchId: Long, program: String)
POST	/era/:batchId/:program								controllers.dynamicforms.Results.save(batchId: Long, program: String)
GET		/era/:batchId/:program/tulokset						controllers.dynamicforms.Results.show(batchId: Long, program: String)
GET		/era/:batchId/:program/historia						controllers.dynamicforms.Results.history(batchId: Long, program: String)

# ingredient management
GET		/yllapito/raaka-aine								controllers.Ingredients.index
POST	/yllapito/raaka-aine								controllers.Ingredients.save
GET		/yllapito/raaka-aine/uusi							controllers.Ingredients.create
GET		/yllapito/raaka-aine/sivu/:index					controllers.Ingredients.page(index: Int)
GET		/yllapito/raaka-aine/:ingredientId					controllers.Ingredients.update(ingredientId: Long)

# form type management
GET		/yllapito/lomaketyyppi								controllers.dynamicforms.FormTypes.index
POST	/yllapito/lomaketyyppi								controllers.dynamicforms.FormTypes.save
GET		/yllapito/lomaketyyppi/uusi							controllers.dynamicforms.FormTypes.create
GET		/yllapito/lomaketyyppi/sivu/:index					controllers.dynamicforms.FormTypes.page(index: Int)
GET		/yllapito/lomaketyyppi/:formTypeId					controllers.dynamicforms.FormTypes.update(formTypeId: Long)

# product management
GET		/yllapito/tuote										controllers.Products.index
POST	/yllapito/tuote										controllers.Products.save
GET		/yllapito/tuote/uusi								controllers.Products.create
GET		/yllapito/tuote/sivu/:index							controllers.Products.page(index: Int)
GET		/yllapito/tuote/:productId							controllers.Products.update(productId: Long)

# form management
GET		/yllapito/lomake									controllers.dynamicforms.Forms.index
POST	/yllapito/lomake									controllers.dynamicforms.Forms.save
GET		/yllapito/lomake/uusi								controllers.dynamicforms.Forms.create
GET		/yllapito/lomake/sivu/:index						controllers.dynamicforms.Forms.page(index: Int)
GET		/yllapito/lomake/:formId							controllers.dynamicforms.Forms.update(formId: Long)
GET		/yllapito/lomake/:formId/esikatselu					controllers.dynamicforms.Forms.preview(formId: Long)

# dynamic form management
GET		/yllapito/lomakkeet									controllers.dynamicforms.Manage.allForms()
GET		/yllapito/lomakkeet/lomake							controllers.dynamicforms.Manage.createForm()
POST	/yllapito/lomakkeet/lomake							controllers.dynamicforms.Manage.saveForm()
GET		/yllapito/lomakkeet/:formId							controllers.dynamicforms.Manage.createField(formId: Long)
GET		/yllapito/lomakkeet/:formId/esikatselu				controllers.dynamicforms.Manage.previewForm(formId: Long)
GET		/yllapito/lomakkeet/:formId/muokkaa					controllers.dynamicforms.Manage.editForm(formId: Long)
POST	/yllapito/lomakkeet/:formId/poista					controllers.dynamicforms.Manage.deleteForm(formId: String)
POST	/yllapito/lomakkeet/:formId							controllers.dynamicforms.Manage.saveField(formId: Long)
GET		/yllapito/lomakkeet/:formId/kentta/:fieldId			controllers.dynamicforms.Manage.editField(formId: Long, fieldId: Long)
POST	/yllapito/lomakkeet/:formId/kentta/:fieldId/poista	controllers.dynamicforms.Manage.deleteField(formId: Long, fieldId: String)

# batch management
GET		/erat												controllers.Batches.index()
GET		/erat/era											controllers.Batches.add()
POST	/erat/era											controllers.Batches.save()
GET		/era/:batchId										controllers.Batches.show(batchId: Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
