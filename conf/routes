# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Naming conventions
#GET	/foo				page?sivu=1
#GET	/foo/uusi			fresh
#POST	/foo/uusi			create
#GET	/foo/:id			show
#GET	/foo/:id/muokkaa	edit
#POST	/foo/:id/muokkaa	update
#POST	/foo/:id/poista		destroy
#GET	/foo/:id/kuittaa	ack(ack = false)
#POST	/foo/:id/kuittaa	ack(ack = true)

# Home page
GET     /													controllers.Application.index

# Shibboleth
GET		/autentikoi											controllers.shib.Shibboleth.authenticate
GET		/kirjaudu											controllers.shib.Shibboleth.login(url = "/")
GET		/kirjaudu-ulos										controllers.shib.Shibboleth.logout

# Management
GET     /yllapito											controllers.Application.management

# Batches
GET		/erat												controllers.Batches.crud.page(sivu: Int ?= 1)
GET		/erat/uusi											controllers.Batches.crud.fresh
POST	/erat/uusi											controllers.Batches.crud.create
GET		/erat/:batchId										controllers.Batches.crud.show(batchId: Long)

# Final product
#GET		/erat/:batchId/myyntihyvaksynta/uusi			controllers.FinalProducts.fresh(batchId: Long)
#POST	/erat/:batchId/myyntihyvaksynta/uusi				controllers.FinalProducts.create(batchId: Long)
#GET		/erat/:batchId/myyntihyvaksynta/muokkaa			controllers.FinalProducts.edit(batchId: Long)
#POST	/erat/:batchId/myyntihyvaksynta/muokkaa				controllers.FinalProducts.update(batchId: Long)

# Results
GET		/tulokset											controllers.dynamicforms.Results.index
GET		/tulokset/:productId/sivu/:index					controllers.dynamicforms.Results.page(productId: Long, index: Int)
GET		/tulokset/:productId/:formId						controllers.dynamicforms.Results.create(productId: Long, formId: Long)
POST	/tulokset/:productId/:formId						controllers.dynamicforms.Results.save(productId: Long, formId: Long)
GET		/tulokset/:productId/:resultsId						controllers.dynamicforms.Results.read(productId: Long, resultsId: Long)
GET		/tulokset/:productId/:resultsId/muokkaa				controllers.dynamicforms.Results.update(productId: Long, resultsId: Long)
GET		/tulokset/:productId/:resultsId/historia			controllers.dynamicforms.Results.history(productId: Long, resultsId: Long)
#GET		/tulokset/:productId/:resultsId/pdf				controllers.dynamicforms.Results.pdfify(productId: Long, resultsId: Long)

# Ingredient supply
GET		/raaka-aineet										controllers.IngredientSupplies.crud.page(sivu: Int ?= 1)
GET		/raaka-aineet/vastaanota							controllers.IngredientSupplies.crud.fresh
POST	/raaka-aineet/vastaanota							controllers.IngredientSupplies.crud.create
GET		/raaka-aineet/:ingredientId							controllers.IngredientSupplies.crud.show(ingredientId: Long)

# Term management
GET		/yllapito/termit									controllers.Terms.crud.page(sivu: Int ?= 1)
GET		/yllapito/termit/uusi								controllers.Terms.crud.fresh
POST	/yllapito/termit/uusi								controllers.Terms.crud.create
POST	/yllapito/termit/:termId/muokkaa					controllers.Terms.crud.update(termId: Long)
GET		/yllapito/termit/:termId/muokkaa					controllers.Terms.crud.edit(termId: Long)

# Ingredient management
GET		/yllapito/raaka-aineet								controllers.Ingredients.crud.page(sivu: Int ?= 1)
GET		/yllapito/raaka-aineet/uusi							controllers.Ingredients.crud.fresh
POST	/yllapito/raaka-aineet/uusi							controllers.Ingredients.crud.create
POST	/yllapito/raaka-aineet/:ingredientId/muokkaa		controllers.Ingredients.crud.update(ingredientId: Long)
GET		/yllapito/raaka-aineet/:ingredientId/muokkaa		controllers.Ingredients.crud.edit(ingredientId: Long)

# Product management
GET		/yllapito/tuotteet									controllers.Products.crud.page(sivu: Int ?= 1)
GET		/yllapito/tuotteet/uusi								controllers.Products.crud.fresh
POST	/yllapito/tuotteet/uusi								controllers.Products.crud.create
GET		/yllapito/tuotteet/:productId/muokkaa				controllers.Products.crud.edit(productId: Long)
POST	/yllapito/tuotteet/:productId/muokkaa				controllers.Products.crud.update(productId: Long)

# Fieldset management
GET		/yllapito/lomakkeet/kentat							controllers.dynamicforms.Fieldsets.crud.page(sivu: Int ?= 1)
POST	/yllapito/lomakkeet/kentat							controllers.dynamicforms.Fieldsets.crud.create
GET		/yllapito/lomakkeet/kentat/uusi						controllers.dynamicforms.Fieldsets.crud.fresh
#GET		/yllapito/lomakkeet/kentat/:fieldsetId			controllers.dynamicforms.Fieldsets.show(fieldsetId: Long)
POST	/yllapito/lomakkeet/kentat/:fieldsetId/muokkaa		controllers.dynamicforms.Fieldsets.crud.update(fieldsetId: Long)
GET		/yllapito/lomakkeet/kentat/:fieldsetId/muokkaa		controllers.dynamicforms.Fieldsets.crud.edit(fieldsetId: Long)

# Form management
GET		/yllapito/lomakkeet									controllers.dynamicforms.Forms.crud.page(sivu: Int ?= 1)
GET		/yllapito/lomakkeet/uusi							controllers.dynamicforms.Forms.crud.fresh
POST	/yllapito/lomakkeet									controllers.dynamicforms.Forms.crud.create
#GET		/yllapito/lomakkeet/:formId						controllers.dynamicforms.Forms.show(formId: Long)
POST	/yllapito/lomakkeet/:formId/muokkaa					controllers.dynamicforms.Forms.crud.update(formId: Long)
GET		/yllapito/lomakkeet/:formId/muokkaa					controllers.dynamicforms.Forms.crud.edit(formId: Long)

# Field management
POST	/yllapito/lomakkeet/kentat/:fieldsetId/kentat					controllers.dynamicforms.Fields.create(fieldsetId: Long)
GET		/yllapito/lomakkeet/kentat/:fieldsetId/kentat/uusi				controllers.dynamicforms.Fields.fresh(fieldsetId: Long)
POST	/yllapito/lomakkeet/kentat/:fieldsetId/kentat/:fieldId/muokkaa	controllers.dynamicforms.Fields.update(fieldsetId: Long, fieldId: Long)
GET		/yllapito/lomakkeet/kentat/:fieldsetId/kentat/:fieldId/muokkaa	controllers.dynamicforms.Fields.edit(fieldsetId: Long, fieldId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
