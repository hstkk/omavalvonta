# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /													controllers.Application.index

# Management
GET     /yllapito											controllers.Application.management

# batch management
GET		/era												controllers.Batches.index
POST	/era												controllers.Batches.save
GET		/era/uusi											controllers.Batches.create
GET		/era/sivu/:index									controllers.Batches.page(index: Int)
GET		/era/:batchId										controllers.Batches.read(batchId: Long)

# results
#GET		/tulos												controllers.dynamicforms.Results.index
#GET		/tulos/:productId									controllers.dynamicforms.Results.create(productId: Long)
#GET		/tulos/:productId/sivu/:index						controllers.dynamicforms.Results.page(index: Int, productId: Long)
POST	/tulos/:productId/:formId							controllers.dynamicforms.Results.save(productId: Long, formId: Long)
GET		/tulos/:productId/:resultsId						controllers.dynamicforms.Results.read(productId: Long, resultsId: Long)
POST	/tulos/:productId:resultsId/muokkaa					controllers.dynamicforms.Results.update(productId: Long, resultsId: Long)
#GET		/tulos/:productId/:resultsId/historia				controllers.dynamicforms.Results.history(productId: Long, resultsId: Long)
#GET		/tulos/:productId/:resultsId/pdf					controllers.dynamicforms.Results.pdfify(productId: Long, resultsId: Long)

# ingredient supply
GET		/raaka-aine											controllers.IngredientSupplies.index
GET		/raaka-aine/vastaanotto								controllers.IngredientSupplies.create
POST	/raaka-aine/vastaanotto								controllers.IngredientSupplies.save
GET		/raaka-aine/sivu/:index								controllers.IngredientSupplies.page(index: Int)
GET		/raaka-aine/:ingredientId							controllers.IngredientSupplies.read(ingredientId: Long)

# unit management
GET		/yllapito/mittayksikko								controllers.Units.index
POST	/yllapito/mittayksikko								controllers.Units.save
GET		/yllapito/mittayksikko/uusi							controllers.Units.create
GET		/yllapito/mittayksikko/sivu/:index					controllers.Units.page(index: Int)
GET		/yllapito/mittayksikko/:unitId						controllers.Units.update(unitId: Long)

# ingredient management
GET		/yllapito/raaka-aine								controllers.Ingredients.index
POST	/yllapito/raaka-aine								controllers.Ingredients.save
GET		/yllapito/raaka-aine/uusi							controllers.Ingredients.create
GET		/yllapito/raaka-aine/sivu/:index					controllers.Ingredients.page(index: Int)
GET		/yllapito/raaka-aine/:ingredientId					controllers.Ingredients.update(ingredientId: Long)

# product management
GET		/yllapito/tuote										controllers.Products.index
POST	/yllapito/tuote										controllers.Products.save
GET		/yllapito/tuote/uusi								controllers.Products.create
GET		/yllapito/tuote/sivu/:index							controllers.Products.page(index: Int)
GET		/yllapito/tuote/:productId							controllers.Products.update(productId: Long)
GET		/tuote/:productId									controllers.Products.batch(productId: Long)

# form management
GET		/yllapito/lomake									controllers.dynamicforms.Forms.index
POST	/yllapito/lomake									controllers.dynamicforms.Forms.save
GET		/yllapito/lomake/uusi								controllers.dynamicforms.Forms.create
GET		/yllapito/lomake/sivu/:index						controllers.dynamicforms.Forms.page(index: Int)
GET		/yllapito/lomake/:formId							controllers.dynamicforms.Forms.update(formId: Long)
GET		/yllapito/lomake/:formId/esikatselu					controllers.dynamicforms.Forms.preview(formId: Long)

# field management
POST	/yllapito/lomake/:formId							controllers.dynamicforms.Fields.save(formId: Long)
GET		/yllapito/lomake/:formId/kentat						controllers.dynamicforms.Fields.create(formId: Long)
GET		/yllapito/lomake/:formId/kentta/:fieldId			controllers.dynamicforms.Fields.update(formId: Long, fieldId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
