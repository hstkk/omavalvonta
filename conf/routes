# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Naming conventions
#GET	/foo				page?sivu=1
#GET	/foo/uusi			fresh
#POST	/foo/uusi			create
#GET	/foo/:id			show
#GET	/foo/:id/muokkaa	edit
#POST	/foo/:id/muokkaa	update
#POST	/foo/:id/poista		destroy
#GET	/foo/:id/kuittaa	ack(ack = false)
#POST	/foo/:id/kuittaa	ack(ack = true)

# Home page
GET     /													controllers.Application.index

# Shibboleth
GET		/autentikoi											controllers.shib.Shibboleth.authenticate
GET		/kirjaudu											controllers.shib.Shibboleth.login(url = "/")
GET		/kirjaudu-ulos										controllers.shib.Shibboleth.logout

# Management
GET     /yllapito											controllers.Application.management

# API
GET		/api/reitit											controllers.Api.javascriptRoutes
GET		/api/raaka-aineet									controllers.Api.batchIngredients(tuote: Long)

# Batches
GET		/erat												controllers.Batches.index
GET		/erat/sivu/:index									controllers.Batches.page(index: Int)

# Batch management
GET		/era/uusi											controllers.Batches.create
POST	/era/uusi											controllers.Batches.save
GET		/era/:batchId										controllers.Batches.read(batchId: Long)

# Results
GET		/tulos												controllers.dynamicforms.Results.index
GET		/tulos/:productId/sivu/:index						controllers.dynamicforms.Results.page(productId: Long, index: Int)
GET		/tulos/:productId/:formId							controllers.dynamicforms.Results.create(productId: Long, formId: Long)
POST	/tulos/:productId/:formId							controllers.dynamicforms.Results.save(productId: Long, formId: Long)
GET		/tulokset/:productId/:resultsId						controllers.dynamicforms.Results.read(productId: Long, resultsId: Long)
GET		/tulokset/:productId/:resultsId/muokkaa				controllers.dynamicforms.Results.update(productId: Long, resultsId: Long)
GET		/tulokset/:productId/:resultsId/historia			controllers.dynamicforms.Results.history(productId: Long, resultsId: Long)
#GET		/tulokset/:productId/:resultsId/pdf					controllers.dynamicforms.Results.pdfify(productId: Long, resultsId: Long)

# Ingredient supply
GET		/raaka-aine											controllers.IngredientSupplies.index
GET		/raaka-aine/vastaanotto								controllers.IngredientSupplies.create
POST	/raaka-aine/vastaanotto								controllers.IngredientSupplies.save
GET		/raaka-aine/sivu/:index								controllers.IngredientSupplies.page(index: Int)
GET		/raaka-aine/:ingredientId							controllers.IngredientSupplies.read(ingredientId: Long)

# Term management
GET		/yllapito/termit									controllers.Terms.crud.page(sivu: Int ?= 1)
GET		/yllapito/termit/uusi								controllers.Terms.crud.fresh
POST	/yllapito/termit/uusi								controllers.Terms.crud.create
POST	/yllapito/termit/:termId/muokkaa					controllers.Terms.crud.update(termId: Long)
GET		/yllapito/termit/:termId/muokkaa					controllers.Terms.crud.edit(termId: Long)

# Ingredient management
GET		/yllapito/raaka-aine								controllers.Ingredients.crud.page(sivu: Int ?= 1)
GET		/yllapito/raaka-aine/uusi							controllers.Ingredients.crud.fresh
POST	/yllapito/raaka-aine/uusi							controllers.Ingredients.crud.create
POST	/yllapito/raaka-aine/:ingredientId/muokkaa			controllers.Ingredients.crud.update(ingredientId: Long)
GET		/yllapito/raaka-aine/:ingredientId/muokkaa			controllers.Ingredients.crud.edit(ingredientId: Long)

# Product management
GET		/yllapito/tuote										controllers.Products.crud.page(sivu: Int ?= 1)
GET		/yllapito/tuote/uusi								controllers.Products.crud.fresh
POST	/yllapito/tuote/uusi								controllers.Products.crud.create
GET		/yllapito/tuote/:productId/muokkaa					controllers.Products.crud.edit(productId: Long)
POST	/yllapito/tuote/:productId/muokkaa					controllers.Products.crud.update(productId: Long)

# Fieldset management
GET		/yllapito/lomakkeet/kentat							controllers.dynamicforms.Fieldsets.crud.page(sivu: Int ?= 1)
POST	/yllapito/lomakkeet/kentat							controllers.dynamicforms.Fieldsets.crud.create
GET		/yllapito/lomakkeet/kentat/uusi						controllers.dynamicforms.Fieldsets.crud.fresh
#GET		/yllapito/lomakkeet/kentat/:fieldsetId			controllers.dynamicforms.Fieldsets.show(fieldsetId: Long)
POST	/yllapito/lomakkeet/kentat/:fieldsetId/muokkaa		controllers.dynamicforms.Fieldsets.crud.update(fieldsetId: Long)
GET		/yllapito/lomakkeet/kentat/:fieldsetId/muokkaa		controllers.dynamicforms.Fieldsets.crud.edit(fieldsetId: Long)
#POST		/yllapito/lomakkeet/kentat/:fieldsetId/poista	controllers.dynamicforms.Fieldsets.destroy(fieldsetId: Long)

# Form management
GET		/yllapito/lomakkeet									controllers.dynamicforms.Forms.crud.page(sivu: Int ?= 1)
GET		/yllapito/lomakkeet/uusi							controllers.dynamicforms.Forms.crud.fresh
POST	/yllapito/lomakkeet									controllers.dynamicforms.Forms.crud.create
#GET		/yllapito/lomake/:formId						controllers.dynamicforms.Forms.show(formId: Long)
POST	/yllapito/lomake/:formId/muokkaa					controllers.dynamicforms.Forms.crud.update(formId: Long)
GET		/yllapito/lomake/:formId/muokkaa					controllers.dynamicforms.Forms.crud.edit(formId: Long)
#GET		/yllapito/lomake/:formId/poista					controllers.dynamicforms.Forms.destroy(formId: Long)

# Field management
POST	/yllapito/lomakkeet/kentat/:fieldsetId/kentta					controllers.dynamicforms.Fields.create(fieldsetId: Long)
GET		/yllapito/lomakkeet/kentat/:fieldsetId/kentta/uusi				controllers.dynamicforms.Fields.fresh(fieldsetId: Long)
POST	/yllapito/lomakkeet/kentat/:fieldsetId/kentta/:fieldId/muokkaa	controllers.dynamicforms.Fields.update(fieldsetId: Long, fieldId: Long)
GET		/yllapito/lomakkeet/kentat/:fieldsetId/kentta/:fieldId/muokkaa	controllers.dynamicforms.Fields.edit(fieldsetId: Long, fieldId: Long)
#POST		/yllapito/lomakkeet/kentat/:fieldsetId/kentta/:fieldId/poista	controllers.dynamicforms.Fields.destroy(fieldsetId: Long, fieldId: Long)

# Final product
GET		/myyntihyvaksynnat									controllers.FinalProducts.index
GET		/myyntihyvaksynnat/sivu/:index						controllers.FinalProducts.page(index: Int)
GET		/myyntihyvaksynta/:batchId							controllers.FinalProducts.read(batchId: Long)
POST	/myyntihyvaksynta/:batchId							controllers.FinalProducts.save(batchId: Long)
GET		/myyntihyvaksynta/:batchId/muokkaa					controllers.FinalProducts.edit(batchId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
