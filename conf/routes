# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /													controllers.Application.index

# Management
GET     /yllapito											controllers.Application.management

# Batches
GET		/erat												controllers.Batches.index
GET		/erat/sivu/:index									controllers.Batches.page(index: Int)

# Batch management
GET		/era/uusi											controllers.Batches.create
POST	/era/uusi											controllers.Batches.save
GET		/era/:batchId										controllers.Batches.read(batchId: Long)

# Results
GET		/tulos												controllers.dynamicforms.Results.index
GET		/tulos/:productId/sivu/:index						controllers.dynamicforms.Results.page(productId: Long, index: Int)
GET		/tulos/:productId/:formId							controllers.dynamicforms.Results.create(productId: Long, formId: Long)
POST	/tulos/:productId/:formId							controllers.dynamicforms.Results.save(productId: Long, formId: Long)
GET		/tulokset/:productId/:resultsId						controllers.dynamicforms.Results.read(productId: Long, resultsId: Long)
GET		/tulokset/:productId/:resultsId/muokkaa				controllers.dynamicforms.Results.update(productId: Long, resultsId: Long)
GET		/tulokset/:productId/:resultsId/historia			controllers.dynamicforms.Results.history(productId: Long, resultsId: Long)
#GET		/tulokset/:productId/:resultsId/pdf					controllers.dynamicforms.Results.pdfify(productId: Long, resultsId: Long)

# Ingredient supply
GET		/raaka-aine											controllers.IngredientSupplies.index
GET		/raaka-aine/vastaanotto								controllers.IngredientSupplies.create
POST	/raaka-aine/vastaanotto								controllers.IngredientSupplies.save
GET		/raaka-aine/sivu/:index								controllers.IngredientSupplies.page(index: Int)
GET		/raaka-aine/:ingredientId							controllers.IngredientSupplies.read(ingredientId: Long)

# Term management
GET		/yllapito/termit									controllers.Terms.index
GET		/yllapito/termit/uusi								controllers.Terms.create
POST	/yllapito/termit/uusi								controllers.Terms.save
GET		/yllapito/termit/sivu/:index						controllers.Terms.page(index: Int)
#GET		/yllapito/termit/:id								controllers.Terms.read(id: Long)
#POST	/yllapito/termit/:id								controllers.Terms.update(id: Long)

# Ingredient management
GET		/yllapito/raaka-aine								controllers.Ingredients.index
POST	/yllapito/raaka-aine								controllers.Ingredients.save
GET		/yllapito/raaka-aine/uusi							controllers.Ingredients.create
GET		/yllapito/raaka-aine/sivu/:index					controllers.Ingredients.page(index: Int)
GET		/yllapito/raaka-aine/:ingredientId					controllers.Ingredients.update(ingredientId: Long)

# Product management
GET		/yllapito/tuote										controllers.Products.index
POST	/yllapito/tuote										controllers.Products.save
GET		/yllapito/tuote/uusi								controllers.Products.create
GET		/yllapito/tuote/sivu/:index							controllers.Products.page(index: Int)
GET		/yllapito/tuote/:productId							controllers.Products.update(productId: Long)
GET		/tuote/:productId									controllers.Products.batch(productId: Long)

# Fieldset management
GET		/yllapito/lomakkeet/kentat							controllers.dynamicforms.Forms.index
GET		/yllapito/lomakkeet/kentat/sivu/:index				controllers.dynamicforms.Fieldsets.page(index: Int)
#GET		/yllapito/lomakkeet/kentat/uusi
#POST		/yllapito/lomakkeet/kentat/uusi
#GET		/yllapito/lomakkeet/kentat/:fieldsetId
#POST		/yllapito/lomakkeet/kentat/:fieldsetId
#POST		/yllapito/lomakkeet/kentat/:fieldsetId/poista
#POST		/yllapito/lomakkeet/kentat/:fieldsetId/esikatselu

# Form management
GET		/yllapito/lomakkeet									controllers.dynamicforms.Forms.index
#GET		/yllapito/lomakkeet/uusi
#POST	/yllapito/lomakkeet/uusi
GET		/yllapito/lomakkeet/sivu/:index						controllers.dynamicforms.Forms.page(index: Int)
#GET		/yllapito/lomake/:formId
#POST	/yllapito/lomake/:formId
#GET		/yllapito/lomake/:formId/poista
#GET		/yllapito/lomake/:formId/esikatselu

# Field management
#GET		/yllapito/lomakkeet/kentat/:fieldsetId/kentta/uusi
#POST		/yllapito/lomakkeet/kentat/:fieldsetId/kentta/uusi
#GET		/yllapito/lomakkeet/kentat/:fieldsetId/kentta/:fieldId
#POST		/yllapito/lomakkeet/kentat/:fieldsetId/kentta/:fieldId
#POST		/yllapito/lomakkeet/kentat/:fieldsetId/kentta/:fieldId/poista

# Final product
GET		/myyntihyvaksynnat									controllers.FinalProducts.index
GET		/myyntihyvaksynnat/sivu/:index						controllers.FinalProducts.page(index: Int)
GET		/myyntihyvaksynta/:batchId							controllers.FinalProducts.read(batchId: Long)
POST	/myyntihyvaksynta/:batchId							controllers.FinalProducts.save(batchId: Long)
GET		/myyntihyvaksynta/:batchId/muokkaa					controllers.FinalProducts.edit(batchId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
